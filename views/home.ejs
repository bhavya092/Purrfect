      <div class="col-12 col-md-8 ">
          <div class=" m-0 p-0 mx-md-2 p-md-2">
              <% var a =0 %>
              <% posts.forEach(function(post){  %>
                <p> <% a++ %></p>
                <div class="row">
                  <div class="col-md-2">

                  </div>
                  <div class="col-12 col-md-8 m-0">
                    <section id="<%= post._id%>">
                      
                      <div class="card" style="width:100%;height:auto;margin: 0;padding: 0;">
                        <div class="row p-3">
                          <div class="col-3">
                            <img src="<%= post.iconimage %>" alt="" style="width:100%;height:40px;">
                          </div>
                          <div col="col-9">
                            <a  class="m-0 p-0"  id="xyz" href="/petprofile/<%=post.authorid%>/view"> <%= post.petname %> </a>
                            <br>
                            <small class="text-muted my-0"> <i class="fas fa-clock"></i> <%= moment(post.createdOn).fromNow() %></small>
                          </div>
                        </div>
                       
                        
                        <div class="pl-3 py-md-3 pb-1"><i class="fas fa-paw"></i> <%= post.caption %> </div>
                          <img class="card-img-top mb-2 postimg" src="<%= post.image %>" alt="Card image cap">
                         
                        
                  
          
                 
                    <% var item = currentUser._id%>
                    <% var index = post.likedby.indexOf(item); %>
                    <% if(index === -1){ %>
                      <form action="/post/<%= post._id%>/like?_method=PUT" method="POST" class="container">
                        <button  class="btn btn-outline-danger likebutton my-2 px-1 py-0">Like <i class="fas fa-heart "></i></button>
                        <a style="float:right" class="pt-2 mb-0" href="#" id="commentpage" data-toggle="modal" data-target="#<%= a %>"><%= post.comments.length %> <i class="fas fa-comments fa-lg" style="color: black;"></i></a>
                        <span style="float:right" class="pr-5 pt-2 mb-0"><%= post.likes %> <i class="fab fa-gratipay fa-lg " style="color: red;"></i></span>
                      </form>
                    <%}else{ %>
                      <div class="container">
                        <button  class="btn btn-danger  my-2 px-1 py-0">Liked <i class="fas fa-heart "></i></button>
                      <a style="float:right" class="pt-2 mb-0" href="#" id="commentpage" data-toggle="modal" data-target="#<%= a %>"><%= post.comments.length %> <i class="fas fa-comments fa-lg" style="color: black;"></i></a>
                      <span style="float:right" class="pr-5 pt-2 mb-0"><%= post.likes %> <i class="fab fa-gratipay fa-lg " style="color: red;"></i></span>
                      </div>
                      
                    <% } %>
                      
                      
    
                  <div class="modal fade" id="<%= a %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Comments</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% post.comments.forEach(function(comment){ %>
              <span  class="mr-5" style="text-shadow: 1px 2px 0px  cyan;text-transform: capitalize;">
                <i class="fas fa-user-alt"></i> <em> <%= comment.author %> </em>
              </span>
             
              <span class="pull-right text-muted px-1" style=" font-size: 10px;;"> <i class="fas fa-history"></i> <%= moment(comment.createdOn).fromNow() %></span>
              
              <div>
                <i class="fas fa-circle fa-xs px-2" style="text-shadow: 1px 2px 0px  cyan;"></i>
                <%= comment.text %>
              </div>
              <hr>
            <% })  %>
          </div>
          
        </div>
      </div>
    </div>
                  
    
                  <form action="/post/<%= post._id%>/newcomment/<%= currentUser._id %>" method="POST" class="p-2">
                      <div class="input-group">
                          <input type="text" class="form-control" placeholder="Add your comment" aria-label="Recipient's username" aria-describedby="basic-addon2" name="comment">
                          <div class="input-group-append">
                            <button class="input-group-text" id="basic-addon2">ADD</button>
                          </div>
                        </div>
                        <div class="input-group d-none">
                          <input type="text" class="form-control" placeholder="Add your comment" aria-label="Recipient's username" aria-describedby="basic-addon2" name="author" value="<%= currentUser.petname %>">
                          <div class="input-group-append">
                            <button class="input-group-text" id="basic-addon2">ADD</button>
                          </div>
                        </div>
                  </form>
                  </section>
                  </div>
                  <div class="col-2" ></div>
                </div>
                <br>
              <% }) %>
